<div class="container products">
    {{#if product}}
    {{#if list.error}}
    <div class="error">
    <h1>Error!</h1>
    <br>    <br>
    <h3>{{list.error}}</h3>
    <img alt="error" class="error" src="../../images/error.png">
    </div>

    {{else}}

    <h1>El Producto que buscas es:</h1>

    <div class="list-products">
        <p>Id: {{list.id}}</p>
        <h3>{{list.title}}</h3>
        <p>Codigo: {{list.code}}</p>
        <p> Categoria: {{list.category}} </p>
        <p> {{list.description}} </p>
        <p> Precio: {{list.price}}</p>
        <p> Stock: {{list.stock}}</p>
        <p> Estado: {{ list.status }}</p>
        <div>Imagenes:{{list.tumbnails}}</div>
    </div>
    {{/if}}



    {{else}}
    <h1>Lista de Productos:</h1>

    {{#each list}}
    <div class="list-products">
        <div class="products-header">
            <p> {{id}}</p>
            <h3>{{title}}</h3>
            <p>{{code}}</p>
        </div>
        <p> Categoria: {{category}} </p>
        <p> {{description}} </p>
        <p> Precio: {{price}}</p>
        <p> Stock: {{stock}}</p>

        <p> Estado: {{status}}</p>
        <div>Imagenes:{{tumbnails}}</div>
    </div>
    {{/each}}

    {{/if}}

</div>


