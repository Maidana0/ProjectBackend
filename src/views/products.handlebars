<div id="contain" class="container products">
{{#if product}}
    {{#if list.error}}
    <div class="error">
    <h1>Error!</h1>
    <br>    <br>
    <h3>{{list.error}}</h3>
    <img alt="error" class="error" src="../../images/error.png">
    </div>

    {{else}}

    <h1>El Producto que buscas es:</h1>

    <div id='oneProduct' class="list-products">
        <p>Id: {{list._id}}</p>
        <h3>{{list.title}}</h3>
        <p>Codigo: {{list.code}}</p>
        <p> Categoria: {{list.category}} </p>
        <p> Descripcion: {{list.description}} </p>
        <p> Precio: {{list.price}}</p>
        <p> Stock: {{list.stock}}</p>
        <p> Estado: {{ list.status }}</p>
        <div>Imagenes:{{list.tumbnails}}</div>
    </div>
    {{/if}}



    {{else}}
        <h1>Agregar un Producto</h1>
        <form class="form" id="formProduct">
            <input required placeholder="Titulo / Nombre" type="text" name="title" id="title" autocomplete="off" >
            <input required placeholder="Descripcion" type="text" name="description" id="description" autocomplete="off">
            <input required placeholder="Codigo" type="text" name="code" id="code" autocomplete="off">
            <input required placeholder="Precio" type="number" name="price" id="price" autocomplete="off">
            <input required placeholder="Stock" type="number" name="stock" id="stock" autocomplete="off">
            <input required placeholder="Categoria" type="text" name="category" id="category" autocomplete="off">
            <input required placeholder="Imagenes" type="text" name="thumbnails" id="thumbnails" autocomplete="off">
            <section>
                <label form="status">Estado: </label>
                <select name="status" id="status">
                    <option>true</option>
                    <option>false</option>
                </select>
            </section>
            <div id="msj-form">Complete todos los campos.</div>
            <input id="addProduct"type="submit" value="Agregar Producto">
        </form>
        
    <h1>Lista de Productos:</h1>
    <div id="socket-list">

    </div>
    {{/if}}

</div>







<script src="/socket.io/socket.io.js"></script>
<script src="../../products.js"></script>